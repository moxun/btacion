<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorF7F8FA"
    android:layout_height="match_parent"
    tools:context=".mine.activiity.SeetingsActivity">
    <include layout="@layout/public_title_bar"/>


    <RelativeLayout
        android:id="@+id/user_name"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shi_ren"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shiming"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/text_rztype"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yirenzheng"
            android:textColor="#FFD31C"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_ren"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phonerenzheng"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/text_phone"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/phone_update"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（已绑定）175****4235"
            android:textColor="#ffffd31c"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/phone_update"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/em_renz"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_renzheng"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/psd_rz"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_password"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/shop_psd"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shoop_password"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <ImageView

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_out"
        android:background="@drawable/redback_radio10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_300"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="@dimen/dp_45"
        android:text="@string/login_out"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_15"
        />
</LinearLayout>