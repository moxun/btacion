<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <include
        android:id="@+id/tool"
        layout="@layout/public_title_bar"/>

        <LinearLayout
            android:id="@+id/ll_hua"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/qiangray_learn_10"
            android:layout_below="@+id/tool"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_centerVertical="true"
                    android:background="@drawable/chenseyuan"
                    android:layout_width="6dp"
                    android:layout_height="6dp" />

                <TextView
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pulib_user"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />

                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_black_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hzd"
                    android:textColor="#ff5e6166"
                    android:textSize="12sp"
                    />

                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/huazhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_centerVertical="true"
                    android:background="@drawable/chenseyuan"
                    android:layout_width="6dp"
                    android:layout_height="6dp" />

                <TextView
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heyue_user"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />

                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_black_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/bi"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bi_type"
        android:layout_below="@+id/ll_hua"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/ll_hua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USDT"
        android:textColor="#ffffd31c"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_below="@+id/bi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金（USDT）"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/can_shoose"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_below="@+id/bi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可转30,000.00"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/can_shoose"
        android:background="@drawable/qiangray_learn_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:background="@null"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_266"
            android:maxWidth="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:hint="@string/hint_qsrhzsl"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/copy"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="#ffffd31c"
            android:textSize="12sp"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/next_do"
        android:background="@drawable/yellowback_radio10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_height="@dimen/dp_45"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_15"
        />
</RelativeLayout>