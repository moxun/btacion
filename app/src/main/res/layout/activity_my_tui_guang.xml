<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mine.activiity.MyTuiGuangActivity">


    <include layout="@layout/public_title_bar" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/back_tuiguang" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <com.meetsl.scardview.SCardView
            android:layout_width="@dimen/dp_0"


            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"


            android:alpha="0.6"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dp_3"
            app:cardLightDirection="top">

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/img_sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@drawable/icon_tgshouyi" />

                <TextView
                    android:id="@+id/text_till"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_toEndOf="@+id/img_sy"
                    android:text="@string/yesterday_ustd"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_till"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@+id/img_sy"
                    android:text="0.00"

                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            </RelativeLayout>
        </com.meetsl.scardview.SCardView>

        <com.meetsl.scardview.SCardView
            android:layout_width="@dimen/dp_0"


            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"


            android:alpha="0.6"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dp_3"
            app:cardLightDirection="top">

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/img_sy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@drawable/icon_tgshouyi" />

                <TextView
                    android:id="@+id/text_till1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_toEndOf="@+id/img_sy1"
                    android:text="@string/alltic_usdt"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_till1"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@+id/img_sy1"
                    android:text="0.00"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            </RelativeLayout>
        </com.meetsl.scardview.SCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="horizontal">

        <com.meetsl.scardview.SCardView
            android:layout_width="@dimen/dp_0"


            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"


            android:alpha="0.6"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dp_3"
            app:cardLightDirection="top">

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/img_allshouxu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@drawable/icon_tgmoney" />

                <TextView
                    android:id="@+id/text_allsx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_toEndOf="@+id/img_allshouxu"
                    android:text="@string/all_shuxu"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_allsx"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@+id/img_allshouxu"
                    android:text="0.00"

                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            </RelativeLayout>
        </com.meetsl.scardview.SCardView>

        <com.meetsl.scardview.SCardView
            android:layout_width="@dimen/dp_0"


            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"


            android:alpha="0.6"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dp_3"
            app:cardLightDirection="top">

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_8">

                <ImageView
                    android:id="@+id/img_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@drawable/icon_tgsize" />

                <TextView
                    android:id="@+id/text_allsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_toEndOf="@+id/img_fri"
                    android:text="@string/team_allsize"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_allsize"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toEndOf="@+id/img_fri"
                    android:text="0.00"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            </RelativeLayout>
        </com.meetsl.scardview.SCardView>

    </LinearLayout>
</LinearLayout>