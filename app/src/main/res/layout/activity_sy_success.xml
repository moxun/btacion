<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/icon_weizhi_allback"
    android:layout_height="match_parent"
    tools:context=".heyue.activiity.SySuccessActivity">

    <ImageButton
        android:id="@+id/finish"

        android:src="@drawable/icon_back"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_45"
        android:background="@null"
        android:layout_height="@dimen/dp_45" />


    <ImageView
        android:id="@+id/zi"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_below="@+id/finish"
        android:src="@drawable/icon_weizhi_zi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@drawable/icon_weizhi_1"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_30"
        android:layout_below="@+id/zi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+154.54%"
            android:textColor="#ff03ad90"
            android:textSize="30sp"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/syl"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <TextView
            android:text="--------------------------------------------------------------------------------------------"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#EEEEEE"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content">

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC/USDT"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_15"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maidie"
                    android:textColor="#fff65448"
                    android:textSize="14sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_kcjg"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="right"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_jiage"
                    android:textColor="#ff999999"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:src="@color/black"
            />
        <ImageView
            android:id="@+id/app_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_appback" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="@string/zq_hint"
            android:layout_gravity="center"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>