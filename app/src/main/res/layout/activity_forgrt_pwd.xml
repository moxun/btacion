<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login.LoginActivity">


    <TextView
        android:id="@+id/welocome_login"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_pwd1"
        android:textColor="#ff333333"
        android:textSize="24sp"
        />
    <ImageButton
        android:id="@+id/finish"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_alignParentEnd="true"
        android:src="@drawable/close"

        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/dp_45"
        android:background="@null"
        android:layout_height="@dimen/dp_45" />


    <RelativeLayout
        android:id="@+id/re_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_100"
        android:textCursorDrawable="@drawable/edittext_guangbiao"
        android:layout_below="@+id/welocome_login"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        >
        <EditText
            android:inputType="phone"
            android:id="@+id/input_phone"
            android:hint="@string/input_telphone"
            android:textColorHint="@color/transparent_db"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50" />

        <TextView
            android:id="@+id/choose_bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"

            android:drawableRight="@drawable/icon_black_jiantou"
            android:drawablePadding="@dimen/dp_5"
            android:text="+86"
            android:textColor="#ff000000"
            android:textSize="14sp" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/re_code"
        android:layout_below="@+id/re_phone"

        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <EditText
            android:id="@+id/edit_name"
            android:textColorHint="@color/transparent_db"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"

            android:hint="@string/input_phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/getcode"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/yellow_radio20"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_code"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/input_psw"
        android:hint="@string/input_new_psw"
        android:textColorHint="@color/transparent_db"
        android:textColor="#ff999999"

        android:textCursorDrawable="@drawable/edittext_guangbiao"
        android:layout_below="@+id/re_code"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/input_psw_again"
        android:hint="@string/input_psd_again"
        android:textColorHint="@color/transparent_db"
        android:textColor="#ff999999"

        android:textCursorDrawable="@drawable/edittext_guangbiao"
        android:layout_below="@+id/input_psw"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60" />



    <TextView
        android:id="@+id/next_do"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"

        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/yellowback_radio10"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_15" />



</RelativeLayout>