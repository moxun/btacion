<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".mine.fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/icon_mine_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_17"
        />
    <ImageView
        android:id="@+id/seetings"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.example.myapplication.utils.ShadowContainer
        android:layout_below="@+id/seetings"
        android:id="@+id/re_mine"
        app:containerDeltaLength="@dimen/dp_10"
        app:containerShadowRadius="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="19dp"
        app:containerShadowColor="#F7F8FA"
        app:enable="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seetings"

            android:background="@drawable/whiteback_radio10">

            <ImageView
                android:id="@+id/mine_head"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/mine_selector" />

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_toEndOf="@+id/mine_head"
                android:text="徐徐徐徐阳"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/my_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@+id/mine_head"

                android:textColor="#ff666666"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/recy_modle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_below="@+id/my_id"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10">
                <LinearLayout
                    android:id="@+id/ll_chongbi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"

                        android:src="@drawable/icon_topup" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/topup"
                        android:textColor="@color/Color333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_tibi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"

                        android:src="@drawable/icon_tibi" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/tibi"
                        android:textColor="@color/Color333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mymoney"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"

                        android:src="@drawable/icon_mymoney" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/mymoney"
                        android:textColor="@color/Color333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"

                        android:src="@drawable/icon_address" />

                    <TextView

                        android:id="@+id/ite_module_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/address"
                        android:textColor="@color/Color333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.example.myapplication.utils.ShadowContainer>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/recy_mine_item"
        android:layout_below="@+id/re_mine"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>