<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/back_yaoqingtwo"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/finish"

        android:src="@drawable/icon_back"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_45"
        android:background="@null"
        android:layout_height="@dimen/dp_45" />
    <TextView
        android:id="@+id/tool_title"
        android:text="@string/yaoqinghaoyou"

        android:layout_marginTop="@dimen/dp_18"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#ff333333"
        android:textSize="@dimen/sp_17"
        />
    <ImageView
    android:layout_below="@+id/tool_title"
    android:layout_marginTop="@dimen/dp_100"
    android:src="@drawable/yaoqingtext2"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


    <RelativeLayout
        android:background="@drawable/back_yaoqing_2"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_code"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nideyaoq"
            android:textColor="#fffbf3d3"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/erweima"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/text_code"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/yaoqing_1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nideyaoq"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/my_coede"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/yaoqing_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WZ86HB"
            android:textColor="#ff333333"
            android:textSize="28sp"
            />

        <TextView
            android:gravity="center"
            android:textColor="#fffbf3d3"
            android:textSize="15sp"
            android:id="@+id/copy_code"
            android:text="@string/copy_code"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_coede"
            android:background="@drawable/red_radio20"
            android:layout_width="@dimen/dp_190"
            android:layout_height="@dimen/dp_45" />
    </RelativeLayout>
</RelativeLayout>