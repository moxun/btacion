<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View

        android:id="@+id/fenge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"


        android:background="#F7F8FA" />
    <TextView
        android:id="@+id/item_order_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC-USDT"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/text_1"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toRightOf="@+id/item_order_title"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:background="@drawable/lanseback_radio20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空"
        android:textColor="#ff03ad90"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/lever"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toRightOf="@+id/text_1"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:background="@drawable/lanseback_radio20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×50"
        android:textColor="#ff03ad90"
        android:textSize="12sp"
        />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_below="@+id/item_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_kcjg"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/create_price"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8411"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_bj"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/benjin"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="510"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sx"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/fee"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50UTSD"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_yk"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/yingkui"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-584"
                android:textColor="#fff65448"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close_time"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/end_price"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8411"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_pclx"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/type"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="止盈止损平仓"
                android:textColor="#ff000000"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_margin="@dimen/dp_15"
        android:layout_below="@+id/ll_2"
        android:id="@+id/fenge_05"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"


        android:background="#F7F8FA" />
    <TextView
        android:id="@+id/createTime"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_below="@+id/fenge_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开仓时间：04/07 14:22:00"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/canleTime"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/fenge_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平仓时间：04/07 14:22:00"
        android:visibility="gone"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
</RelativeLayout>
