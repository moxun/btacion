<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_yaoqingsan"
    android:layout_height="match_parent"
    tools:context=".home.fragment.YaoqingThreeFragment">
    <ImageButton
        android:id="@+id/finish"

        android:src="@drawable/icon_back"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_45"
        android:background="@null"
        android:layout_height="@dimen/dp_45" />
    <TextView
        android:id="@+id/tool_title"
        android:text="@string/yaoqinghaoyou"

        android:layout_marginTop="@dimen/dp_18"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#ff333333"
        android:textSize="@dimen/sp_17"
        />
    <ImageView
        android:layout_below="@+id/tool_title"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/yaoqingtext_3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:background="@drawable/back_yapqing_3"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nideyaoq"
                android:layout_gravity="center"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/mycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WZ86HB"
                android:textColor="#ff333333"
                android:textSize="34sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/erweima"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_70"
                android:background="@color/black"/>

            <TextView

                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qsyb"
                android:layout_gravity="center"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:gravity="center"
                android:textColor="#fffbf3d3"
                android:textSize="15sp"
                android:id="@+id/copy_code"
                android:text="@string/copy_code"
                android:layout_marginTop="@dimen/dp_9"

                android:layout_below="@+id/my_coede"
                android:background="@drawable/yellow_radio20"
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_45" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>