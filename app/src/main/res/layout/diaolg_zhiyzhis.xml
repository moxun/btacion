<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/whiteback_radio10"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhiyng"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/grayback_radio10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">


            <ImageView
                android:id="@+id/zy_remove"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_remove_close"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zy_size"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/zy_add"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_add_yinli"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhishunx"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/grayback_radio10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">


            <ImageView
                android:id="@+id/zs_remove"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_remove_close"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zs_size"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/zs_add"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_add_yinli"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>
        <View
            android:background="#ffeeeeee"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">
            <TextView
                android:id="@+id/cancle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/canle"
                android:gravity="center"
                android:textColor="#ff999999"
                android:textSize="14sp"
                />
            <View
            android:background="#ffeeeeee"

            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/sure"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/ok"
                android:textColor="#ffffd31c"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
